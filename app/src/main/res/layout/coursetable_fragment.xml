<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".fragment.CoursetableFragment">

    <!--顶部显示日期和星期数的列表-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="70dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UselessParent">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridNumberTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:columnCount="1"
            app:rowCount="1">

            <TextView
                android:id="@+id/timetable_tvWeekCount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text=""
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridMondayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvMondayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Monday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridTuesdayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvTuesdayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Tuesday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridWednesdayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvWednesdayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Wednesday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridThursdayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvThursdayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Thursday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridFridayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
