                android:background="@color/brown"
                android:text="@string/Friday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridSaturdayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvSaturdayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Saturday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />
        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridSundayTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvSundayTop"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text="@string/Sunday"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_day"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="90dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UselessParent">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridNumberDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:columnCount="1"
            app:rowCount="1">

            <TextView
                android:id="@+id/timetable_tvBlank"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/brown"
                android:text=""
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_rowWeight="0.5" />

        </androidx.gridlayout.widget.GridLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridMondayDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="2"
            app:columnCount="1"
            app:rowCount="15">

            <TextView
                android:id="@+id/timetable_tvMondayDay"
                android:layout_width="match_parent"
